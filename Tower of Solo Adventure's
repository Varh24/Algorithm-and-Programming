def main():
    open("Stat.txt", "w").close()
    def stat(nama, player_health):
        with open ("Stat.txt", "a") as file:
            stat = f"\nNama Player : {nama}\nHealth Point : {player_health}" 
            file.write(stat)
    def pop():
        with open ("Stat.txt", "r") as file:
            teks = file.readlines()
            for i in teks[-2:]:
                print(i)

    def suit(player, monster):
        results = [
            ["Semangat", "Kamu keren", "Hati-hati"],
            ["Hati-hati", "Semangat", "Kamu keren"],
            ["Kamu keren", "Hati-hati", "Semangat"]
        ]
        choices = ['batu', 'gunting', 'kertas']
    
        player_index = choices.index(player)
        monster_index = choices.index(monster)
    
        if player == monster:
            time.sleep(1)
            print("Miss. . . . ")
            print()
        
        return results[player_index][monster_index]
    
