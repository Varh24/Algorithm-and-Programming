    def game5():
            azx = ['batu', 'gunting', 'kertas']
            player_health = 15
            naga = 10
            print("Pilihanmu: Ketik 'Batu', 'Gunting', atau 'Kertas' ")  
            while player_health > 0 and naga > 0:
                player = input("\nPilihanmu : ").lower()
                if player not in azx:
                    print("Pilihan tidak valid.")
                    continue
                monster = random.choice(azx)
                print(f"Dragon memilih : {monster}")
                print() 
                a1 = suit(player, monster)
                print(a1)
                time.sleep(2)
                if a1 == "Kamu keren":
                    naga -= 4
                    print()
                    print(f"Dragon kehilangan 4 HP, tersisa {naga} HP")
                elif a1 == "Hati-hati":
                    player_health -= 4
                    print()
                    print(f"Kamu kehilangan 4 HP, tersisa {player_health} HP")
                    if player_health <= 0:
                        print()
                        print("Kamu kalah!, kamu dihidupkan kembali dan permainan diulang")
                        naga = 10
                        player_health = 15
                        continue
                else:
                    print()
                    print("Mari lakukan lagi dattebayooou")
                    continue
                print()
                print(f"HP Kamu: {player_health}, HP Dragon: {naga}")
                print()
                if naga <= 0:
                    break
            stat(nama, player_health)
            print("Kamu telah mengalahkan Dragon (Final Boss), ini stat terakhir kamu")
            print()
            pop()
            time.sleep(3)
            print(colored(f"{nama}", "light_blue"),": Fyuhh... fyuhh .... huuhhhh ..... huhh..... fyuhhhh.....")
            time.sleep(1)
            print(colored(f"{nama}", "light_blue"),": Akhirnya..... Aku mengalahkan sang final boss, Dragon")
            time.sleep(1)
            print()
            print(f"{nama} pingsan karena kelelahan dan ia pun tertidur")
            time.sleep(1)
            print(f"Ketika {nama} terbangun, ia sudah berada ditempat tidurnya, ia sangat terkejud untuk kesekian kalinya. Ia ternyata dipindahkan ke bumi lagi sesuai janji dari dewa tersebut.")
            time.sleep(1)
            print()
            print(colored("God of War", "light_red"),f": Hai {nama}, selamat karena telah menyelesaikan dungeon Tower of Nightmare's milikku ini. Dengan begitu kamu telah mencukupi syarat untuk mengikuti pemilihan apostle yang ada nantinya")
            print()
            time.sleep(1)
            print(f"{nama} sangat kebingungan apa yang akan terjadi nanti. Sebelum ia kebingungan pun, ia telah ditinggalkan pergi oleh dewa tersebut. Tidak ada lagi suara yang seperti biasa {nama} dengar dalam kepalanya")
            time.sleep(3)
            print()
