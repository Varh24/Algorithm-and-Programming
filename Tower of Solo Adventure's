    def game4():
            azx = ['batu', 'gunting', 'kertas']
            player_health = 10
            knight = 7
            print("Pilihanmu: Ketik 'Batu', 'Gunting', atau 'Kertas' ")  
            while player_health > 0 and knight > 0:
                player = input("\nPilihanmu : ").lower()
                if player not in azx:
                    print("Pilihan tidak valid.")
                    continue
                monster = random.choice(azx)
                print(f"Knight memilih : {monster}")
                print()
                a1 = suit(player, monster)
                print(a1)
                time.sleep(2)
                if a1 == "Kamu keren":
                    knight -= 2
                    print()
                    print(f"Knight kehilangan 2 HP, tersisa {knight} HP")
                elif a1 == "Hati-hati":
                    player_health -= 3
                    print()
                    print(f"Kamu kehilangan 3 HP, tersisa {player_health} HP")
                    if player_health <= 0:
                        print()
                        print("Kamu kalah!, kamu dihidupkan kembali dan permainan diulang")
                        knight = 7
                        player_health = 10
                        continue
                else:
                    print()
                    print("Mari lakukan lagi dattebayooou")
                    continue
                print()
                print(f"HP Kamu: {player_health}, HP Knight: {knight}")
                print()
                if knight <= 0:
                    break
            stat(nama, player_health)
            print("Kamu telah mengalahkan Knight of Guardian, ini stat kamu")
            print()
            pop()
            time.sleep(1)
            print(colored(f"{nama}", "light_blue"),": Fyuhh... Fyuhh .... ")
            time.sleep(1)
            print(colored(f"{nama}", "light_blue"),": Akhirnya aku sampai ke lantai terakhir, lebih baik aku duduk sebentar dan beristirahat")
            time.sleep(1)
            print()
            print(f"Ketika {nama} sedang beristirahat, ",colored("God of War", "light_red"), "muncul tepat dihadapan sang player")
            time.sleep(1)
            print(f"{nama} sangat terkejud, ia bahkan sampai berlarian seketika secara spontan")
            time.sleep(1)
            print()
            print(colored("God of War", "light_red"),f": Hai {nama}, mengapa kamu sangat terkejut begitu hahahha. Sesuai dengan janjiku, aku akan memberimu hadiah. Potion of Qi (health +5) dan Sword of Flames (attack +2)")
            time.sleep(1)
            print()
            print("Semua stat dipulihkan")
            print()
            time.sleep(1)
            print(colored(f"{nama}", "light_blue"),":Terimakasih dewa, aku akan gunakan ini sebaik mungkin untuk menyelesaikan dungeon ini.")
            time.sleep(1)
            print()
            print(f"{nama} pun berangkat ke lantai terakhir")
            time.sleep(3)
