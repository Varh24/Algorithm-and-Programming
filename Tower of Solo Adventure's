    def game3():
            azx = ['batu', 'gunting', 'kertas']
            player_health = 10
            troll = 5
            print("Pilihanmu: Ketik 'Batu', 'Gunting', atau 'Kertas' ")  
            while player_health > 0 and troll > 0:
                player = input("\nPilihanmu : ").lower()
                if player not in azx:
                    print("Pilihan tidak valid.")
                    continue
                monster = random.choice(azx)
                print(f"Troll memilih : {monster}")
                print()
                a1 = suit(player, monster)
                print(a1)
                time.sleep(2)
                if a1 == "Kamu keren":
                    troll -= 2
                    print()
                    print(f"Troll kehilangan 2 HP, tersisa {troll} HP")
                elif a1 == "Hati-hati":
                    player_health -= 2
                    print()
                    print(f"Kamu kehilangan 2 HP, tersisa {player_health} HP")
                    if player_health <= 0:
                        print()
                        print("Kamu kalah!, kamu dihidupkan kembali dan permainan diulang")
                        troll = 5
                        player_health = 10
                        continue
                else:
                    print()
                    print("Mari lakukan lagi dattebayooou")
                    continue
                print()
                print(f"HP Kamu: {player_health}, HP Troll: {troll}")
                print()
                if troll <= 0:
                    break
            stat(nama, player_health)
            print("Kamu telah mengalahkan Troll, ini stat kamu")
            print()
            pop()
            time.sleep(3)
            print(colored(f"{nama}", "light_blue"),": Pedang yang diberikan oleh dewa sangatlah overpowered guys, terimakasih sang dewa.")
