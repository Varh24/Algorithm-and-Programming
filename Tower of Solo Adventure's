    def game1():
        azx = ['batu', 'gunting', 'kertas']
        player_health = 10
        goblin = 2
        print("Pilihanmu: Ketik 'Batu', 'Gunting', atau 'Kertas' ")  
        while player_health > 0 and goblin > 0:
            player = input("\nPilihanmu : ").lower()
            if player not in azx:
                print("Pilihan tidak valid.")
                continue
            monster = random.choice(azx)
            print(f"Monster memilih : {monster}")
            print()
            a1 = suit(player, monster)
            print(a1)
            time.sleep(2)
            if a1 == "Kamu keren":
                goblin -= 1
                print()
                print(f"Goblin kehilangan 1 HP, tersisa {goblin} HP")
            elif a1 == "Hati-hati":
                player_health -= 1
                print()
                print(f"Kamu kehilangan 1 HP, tersisa {player_health} HP")
                if player_health <= 0:
                    print()
                    print("Kamu kalah!, kamu dihidupkan kembali dan permainan diulang")
                    goblin = 2
                    player_health = 10
                    continue
            else:
                print()
                print("Mari lakukan lagi dattebayooou")
                continue
            print()
            print(f"HP Kamu: {player_health}, HP Monster: {goblin}")
            print()
            if goblin <= 0:
                break
        stat(nama, player_health)
        print("Kamu telah mengalahkan seekor goblin, ini stat kamu.")
        print()
        pop()
        print()
        time.sleep(1)
        print(colored(f"{nama}", "light_blue"),": Akhirnya aku mengalahkannya, walaupun agak sedikit kaku tapi aku berhasil membunuhnya ")
        time.sleep(1)
        print()
        time.sleep(1)
        print("Semua stat dipulihkan")
        print()
        time.sleep(1)
        print(colored(f"{nama}", "light_blue"),": Mari kita ke lantai 2")
        time.sleep(3)
    game1()
    print()
    print("Tekan Enter untuk lanjut . . . . .. ")
    input()
