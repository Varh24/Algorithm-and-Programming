tujuan = int(input("Masukkan Tujuan Anda (1-6): "))
print()
print(" <=======================================>")
print("        Class                 Harga")
print("1.   First Class            Rp.30.000")
print("2.   Bisnis Class           Rp.20.000")
print("3.   Economy Class          Rp.10.000")
